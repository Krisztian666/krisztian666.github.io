<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView android:text="@string/action_settings" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24 Hour format"
        android:id="@+id/h24checkBox"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:id="@+id/settings_ok_button"
        android:onClick="configureSaved"
        android:layout_below="@+id/h24checkBox"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
